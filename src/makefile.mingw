INCLUDEPATHS= \
 -I"C:\boost_1_55_0-mgw" \
 -I"C:\db-4.8.30.NC-mgw\build_unix" \
 -I"C:\openssl-1.0.1g-mgw\include"

LIBPATHS= \
 -L"C:\boost_1_55_0-mgw\stage\lib" \
 -L"C:\db-4.8.30.NC-mgw\build_unix" \
 -L"C:\openssl-1.0.1g-mgw"

LIBS= \
 -lboost_system-mgw83-mt-s-1_55 \
 -lboost_filesystem-mgw83-mt-s-1_55 \
 -lboost_program_options-mgw83-mt-s-1_55 \
 -lboost_thread-mgw83-mt-s-1_55 \
